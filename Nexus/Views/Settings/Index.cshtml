
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card shadow col-md-12">
        <h6 class="card-header font-weight-bold text-dark py-3">Ajustes</h6>
        <div class="card-body">
            <div class="row" id="frm_Settings">
                <div class="form-group col-md-2">
                    <label for="slcSettings_department" class="form-label">Departamento</label>
                    <select id="slcSettings_department" class="form-control form-control-sm">
                        <option value="-1">Seleccione</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="txtSettings_title" class="form-label">Titulo</label>
                    <input type="text" class="form-control form-control-sm" id="txtSettings_title" placeholder="Ingrese el titulo del dashboard">
                </div>
                <div class="form-group col-md-2">
                    <label for="slcSettings_dashboard_type" class="form-label">Tipo de Dashboard</label>
                    <select id="slcSettings_dashboard_type" class="form-control form-control-sm">
                        <option value="-1">Seleccione</option>
                    </select>
                </div>
                <div class="form-group col-md-3" style="margin-top:2rem;">
                    <a href="#" id="btnSettings_Search" class="btn btn-info btn-icon-split btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-search"></i>
                        </span>
                        <span class="text">Buscar</span>
                    </a>
                    <a href="#" id="btnSettings_clean" class="btn btn-secondary btn-icon-split btn-sm">
                        <span class="icon text-white-50">
                            <i class="fas fa-eraser"></i>
                        </span>
                        <span class="text">Limpiar Filtros</span>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <label class="form-label">Mis Dashboards</label>
                    <div class="row gutters-sm" id="pnlSettings_dashboard">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>require(['Settings']);</script>